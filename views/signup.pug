doctype html 
html
    head 
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title Sign-up Page
        link(rel = "stylesheet" href = "style.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        script(src="https://kit.fontawesome.com/1606ee9b40.js" crossorigin="anonymous")

    body 
        include ./partials/loginNav
        #container
            div 
                h3  FLASH 
                    i(class = "fas fa-bolt")
                    | EATS
                h5 Sign Up!
            form(class = "form-group" action="/signup" method="post")
                div
                    label(for="username") User Name: 
                    input#username(name = "username" type="textbox" class="form-control")
                div
                    label(for="password") Password: 
                    input#password(name = "password" type="password" class="form-control")
                br  
                button(type="submit" class="btn btn-outline-warning form-control") Sign Up
            if duplicate
                p#alert The username already exists!
        //- script(src='client.js')